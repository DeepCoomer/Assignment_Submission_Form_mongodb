<%- include("./partials/header") %>
    <div class="container">
        <h1 class="text-center my-3">Assignment Submission</h1>
        <form action="/add" method="POST">
            <div class="form-group mb-3">
                <label for="StudentName" class="form-label">Student Name:</label>
                <input type="text" name="student" class="form-control" placeholder="Enter your Name">
            </div>
            <div class="form-group mb-3">
                <label for="RollNo" class="form-label">Roll No:</label>
                <input type="number" name="rollno" class="form-control"
                    placeholder="Enter Roll No">
            </div>
            <div class="form-group mb-3">
                <label for="Year" class="form-label">Year:</label>
                <input type="text" name="year" class="form-control"
                    placeholder="Enter your current year of course">
            </div>
            <div class="form-group mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address:</label>
                <input type="email" name="email" class="form-control" 
                    placeholder="Enter your student email">
            </div>
            <div class="form-group mb-3">
                <label for="Drive Link" class="form-label">Drive Link:</label>
                <input type="text" name="drivelink" class="form-control"
                    placeholder="Enter the drive link of your assignment">
            </div>
            <div class="form-group mb-3">
                <label for="exampleFormControlFile1" class="form-label">Upload Assignment Pdf:</label><br>
                <input type="file" name="pdf" class="form-control-file">
                <small id="emailHelp" class="form-text text-muted" 1>*Make sure the file size is less than 16
                    MB.</small>
            </div>
            <input type="submit" value="Submit" class="btn btn-primary">
        </form>
        <br>
       <p class="text-center"> <a href="/submissions">View All Submissions</a></p>
    </div>
    <%- include("./partials/footer") %>
